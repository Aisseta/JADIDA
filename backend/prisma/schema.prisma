generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id_user           Int      @id @default(autoincrement())
  url_photo_profil  String?  // optionnel
  nom               String
  prenom            String
  sexe              String
  email             String   @unique
  mot_de_passe      String
  adresse           String?
  ville             String?
  description       String?
  score_eco         Float    @default(0)
  date_inscription  DateTime @default(now())
  jadis_wallet      Float    @default(0)
}